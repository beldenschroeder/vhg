{
  "name": "vhg",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/vhg",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/vhg"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/vhg"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "vhg:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "vhg:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "vhg:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "vhg:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/vhg/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/vhg/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": ["build"],
      "defaultConfiguration": "local",
      "options": {
        "engine": "docker",
        "context": "dist/apps/vhg",
        "file": "apps/vhg/Dockerfile",
        "build-args": ["CONTAINER_CONTEXT=."]
      },
      "configurations": {
        "local": {
          "tags": ["beldenschroeder/vhg:1.1"],
          "push": false
        },
        "production": {
          "tags": ["beldenschroeder/vhg:1.1"],
          "push": true
        }
      }
    }
  },
  "tags": []
}
